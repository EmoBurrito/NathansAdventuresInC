#include <stdio.h>
#include <stdlib.h>
#include "bitmap.h"

void TestLoadWriteImage()
{
	FILE * infile = GetFile("Enter file to open", "rb");
	FILE * outfile = GetFile("Enter output file", "w+b");

	//Create an image struct with both of its pointers set to NULL. Fine because fixed size.
	IMAGE img = {NULL, NULL};

	//Read in an image
	ReadImage(&img, infile);

	//Close the file
	fclose(infile);

	//Write the image out to file
	WriteImage(&img, outfile);
	fclose(outfile);
}

int main(void)
{
	//printf("Size of Bitmap header: %lu\n", sizeof(BITMAPHDR));

	TestLoadWriteImage();

	return EXIT_SUCCESS;
}
